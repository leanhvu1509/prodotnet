    <!--Banner-->
    <!--review-->
    <section class="review">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="div-title">
                        <h3><a href="">Tin mới</a> </h3>
                    </div>
                    @foreach (var item in Model.ListPosts)
                    {
                    <div class="reiview-item">
                        <div class="review-pic">
                            <img src="@("~/upload/"+item.ImageName)" asp-append-version="true"alt="">
                        </div>
                        <div class="review-text">

                            <div class="label"><span>
                                @Html.Raw(string.Join("-",
                                    item.PostCategories
                                    .Select(p => p.Category)
                                    .ToList()
                                    .Select(c => $"<i>{c.Title}</i>")))
                            </span></div>
                            @* <div class="label" style="background-color: coral;"><span>Đánh giá</span></div>
                            <div class="label" style="background-color: gold;"><span>Chia sẻ</span></div> *@
                            <h5><a asp-action="DisplayPost" asp-route-slug="@item.Slug">@item.Title</a></h5>
                            <ul>
                                <li>by <span>@item.User.Username</span></li>
                                <li><i class="far fa-clock"></i> @item.DateUpdated</li>
                                <li><i class="far fa-eye"></i>0</li>
                            </ul>
                            <p>@item.Description</p>
                        </div>
                    </div>
                    }

                    <div class="pagination-item">
                        <a href="#"><span>1</span></a>
                        <a href="#"><span>2</span></a>
                        <a href="#"><span>3</span></a>
                        <a href="#"><span>Next</span></a>
                    </div>
                </div>
                <!--review-->
                <div class="col-lg-4 col-md-7">
                    <div class="sidebar-option">
                        <div class="sidebar-option">
                            <div class="bannerslide">
                                <img src="~/img/banner/17952848_1096152247156958_6424826800698070719_n.png">
                                <img src="~/img/banner/18056780_1096152233823626_3983504965514388046_n.png">
                                <img src="~/img/banner/18032996_1096152250490291_3089556685517829575_n.jpg">
                                <img src="~/img/banner/17991028_1096152283823621_7523349131145672731_n.png">
                            </div>
                            <script type="text/javascript" src="myjs/slide.js">
                            </script>
                        </div>                
                        <div class="subscribe">
                            <div class="div-title">

                            </div>
                            <p>Đăng ký để theo dõi những tin tức và cập nhật mới nhất của website chúng tôi.</p>
                            <form action="#">
