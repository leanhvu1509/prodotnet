@model prodotnet.Models.User
@{
    Layout = "/Views/Shared/Admin/_LoginLayout.cshtml";
    ViewData["Title"] = "ĐĂNG KÝ";
}

<div class="p-5">
    <div class="text-center">
    <h1 class="h4 text-gray-900 mb-4">@ViewData["Title"]</h1>
    <hr>
    <partial name="_AlertMessage"/>
    </div>
    <form class="user" id="account" asp-action="Register" method="post">
            <div class="form-group">
                <input type="text" asp-for="Username" placeholder="Nhập username" id="username" class="form-control form-control-user">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="email" asp-for="Email" placeholder="Nhập email" id="username" class="form-control form-control-user"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control form-control-user" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-user" placeholder="Nhập lại mật khẩu" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-user btn-block">Đăng ký</button>
        </form>
    <div class="text-center">
        <a class="small" id="forgot-password" asp-page="">Bạn quên mật khẩu?</a>
    </div>
    <div class="text-center">
        <a class="small" href="@Url.Action("Login","Dashboard")">Nếu bạn đã có tài khoản</a>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}