@model prodotnet.Models.Post

@{
    ViewData["Title"] = "Xóa bài viết";
    Layout = "_Layout";
}



<h3>Bạn có chắc muốn xóa bài viết này không?</h3>
<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        @* <img src="@("~/upload/"+Model.ImageName)" asp-append-version="true" width="250px" height="250px"/> *@
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PostId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay về</a>
    </form>
</div>
